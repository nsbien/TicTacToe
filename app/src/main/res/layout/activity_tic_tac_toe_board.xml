<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:useDefaultMargins="true"
    android:columnCount="3"
    tools:context=".WelcomeActivity">

    <ImageView
        android:id="@+id/square00"
        android:layout_margin="6dp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="2"
        android:onClick="onClickImageView"
        android:tag="0 0"
        android:background="@color/colorPrimary">
    </ImageView>

    <ImageView
        android:id="@+id/square01"
        android:layout_margin="6dp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="2"
        android:onClick="onClickImageView"
        android:tag="0 1"
        android:background="@color/colorPrimary">
    </ImageView>

    <ImageView
        android:id="@+id/square02"
        android:layout_margin="6dp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="2"
        android:onClick="onClickImageView"
        android:tag="0 2"
        android:background="@color/colorPrimary">
    </ImageView>

    <ImageView
        android:id="@+id/square10"
        android:layout_margin="6dp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="2"
        android:onClick="onClickImageView"
        android:tag="1 0"
        android:background="@color/colorPrimary">
    </ImageView>

    <ImageView
        android:id="@+id/square11"
        android:layout_margin="6dp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="2"
        android:onClick="onClickImageView"
        android:tag="1 1"
        android:background="@color/colorPrimary">
    </ImageView>

    <ImageView
        android:id="@+id/square12"
        android:layout_margin="6dp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="2"
        android:onClick="onClickImageView"
        android:tag="1 2"
        android:background="@color/colorPrimary">
    </ImageView>

    <ImageView
        android:id="@+id/square20"
        android:layout_margin="6dp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="2"
        android:onClick="onClickImageView"
        android:tag="2 0"
        android:background="@color/colorPrimary">
    </ImageView>

    <ImageView
        android:id="@+id/square21"
        android:layout_margin="6dp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="2"
        android:onClick="onClickImageView"
        android:tag="2 1"
        android:background="@color/colorPrimary">
    </ImageView>

    <ImageView
        android:id="@+id/square22"
        android:layout_margin="6dp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="2"
        android:onClick="onClickImageView"
        android:tag="2 2"
        android:background="@color/colorPrimary">
    </ImageView>

    <ImageView
        android:id="@+id/playerTurnPreview"
        android:layout_margin="6dp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:background="@color/colorPrimary">
    </ImageView>

    <TextView
        android:id="@+id/updateStatusText"
        android:layout_margin="6dp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_columnWeight="1"
        android:layout_columnSpan="2"
        android:layout_rowWeight="1"
        android:textColor="@color/colorWhite"
        android:text="TextView" />

    <Button
        android:id="@+id/playAgainButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_columnWeight="1"
        android:layout_columnSpan="2"
        android:layout_rowWeight="1"
        android:visibility="invisible"
        android:background="@color/colorPrimary"
        android:text="play again" />

    <Button
        android:id="@+id/quitButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:background="@color/colorPrimary"
        android:text="quit" />


</GridLayout>